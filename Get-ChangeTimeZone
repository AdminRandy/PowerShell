param([Parameter(Mandatory=$true)][string[]]$ServerNames);$timeZone=Read-Host "Enter the desired time zone (e.g., 'Central Europe Standard Time'):";foreach($Server in $ServerNames){Write-Host "Changing time zone on server: $Server";Invoke-Command -ComputerName $Server -ScriptBlock {param($tz)Set-TimeZone -Id $tz} -ArgumentList $timeZone;$TimeZone=Invoke-Command -ComputerName $Server -ScriptBlock {Get-TimeZone};Write-Host "Time zone changed to: $($TimeZone.Id)"}
